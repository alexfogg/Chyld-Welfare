.row
  .large-3.columns
    = form_for @user, :url => apply_path, :remote => true do |f|
      = f.label 'Donation Name'
      = f.text_field :donatename
      = f.label 'Donation Amount'
      = f.number_field :donateamt
      = button_to_function('Cancel', 'cancel_donate_form()',:class => 'button radius tiny alert')
      = f.submit "Submit", :id => 'donate_button', :class => 'button radius tiny'
  .large-9.columns
